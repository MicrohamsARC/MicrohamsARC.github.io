---
/**
 * Documentation Index Page
 */

import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { publishedFilter } from '../../utils/content';

const docs = (await getCollection('docs', publishedFilter))
  .sort((a, b) => a.data.order - b.data.order);

// Group by section
const docsBySection = docs.reduce((acc, doc) => {
  const section = doc.data.section || 'General';
  if (!acc[section]) acc[section] = [];
  acc[section].push(doc);
  return acc;
}, {} as Record<string, typeof docs>);
---

<BaseLayout title="Documentation" description="Technical documentation and reference materials">
  <div class="region">
    <div class="wrapper">
      <div class="stack-8">
        <header class="center text-center">
          <div class="stack-4">
            <h1>Documentation</h1>
            <p class="lead mx-auto">
              Reference materials and technical documentation for amateur radio operators.
            </p>
          </div>
        </header>

        <div class="center">
          <div class="stack-12">
            {Object.entries(docsBySection).map(([section, sectionDocs]) => (
              <section class="stack-4">
                <h2 class="h3">{section}</h2>
                <div class="stack-3">
                  {sectionDocs.map((doc) => (
                    <article class="card" data-variant="interactive">
                      <div class="card__header">
                        <h3 class="card__title">
                          <a href={`/docs/${doc.slug}`} style="text-decoration: none; color: inherit;">
                            {doc.data.title}
                          </a>
                        </h3>
                        {doc.data.description && (
                          <p class="card__description">{doc.data.description}</p>
                        )}
                      </div>
                    </article>
                  ))}
                </div>
              </section>
            ))}
          </div>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>
