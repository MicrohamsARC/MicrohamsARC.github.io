---
/**
 * Documentation Index Page
 * 
 * Lists all documentation in a gallery grid, grouped by section
 */

import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection, type CollectionEntry } from 'astro:content';
import { publishedFilter } from '../../utils/content';

const docs = (await getCollection('docs', publishedFilter))
  .sort((a, b) => a.data.order - b.data.order);

// Group by section
const docsBySection = docs.reduce((acc: Record<string, CollectionEntry<'docs'>[]>, doc) => {
  const section = doc.data.section || 'General';
  if (!acc[section]) acc[section] = [];
  acc[section].push(doc);
  return acc;
}, {});
---

<BaseLayout title="Documentation" description="Technical documentation and reference materials">
  <!-- Page Header -->
  <section class="region">
    <div class="wrapper wrapper--full">
      <div class="stack-4">
        <h1 class="text-4xl">Documentation</h1>
        <p class="lead" style="max-inline-size: var(--measure-wide);">
          Reference materials and technical documentation for amateur radio operators.
        </p>
      </div>
    </div>
  </section>

  <!-- Documentation Grid -->
  <section class="region" style="background-color: var(--color-surface-muted);">
    <div class="wrapper wrapper--full">
      <div class="stack-12">
        {(Object.entries(docsBySection) as [string, CollectionEntry<'docs'>[]][]).map(([section, sectionDocs]) => (
          <div class="stack-6">
            <h2>{section}</h2>
            <div class="grid grid--auto-fit">
              {sectionDocs.map((doc) => (
                <article class="card" data-variant="interactive">
                  <div class="card__header">
                    <h3 class="card__title">
                      <a href={`/docs/${doc.slug}`} style="text-decoration: none; color: inherit;">
                        {doc.data.title}
                      </a>
                    </h3>
                    {doc.data.description && (
                      <p class="card__description">{doc.data.description}</p>
                    )}
                  </div>
                </article>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
</BaseLayout>
