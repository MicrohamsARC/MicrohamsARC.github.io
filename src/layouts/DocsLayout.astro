---
/**
 * Docs Layout - Documentation Pages with Sidebar
 *
 * Composes: RootLayout + SiteHeader + sidebar nav + content
 * No footer - maximizes vertical space for reading.
 *
 * Used for /contributing and similar documentation sections.
 */

import RootLayout from './RootLayout.astro';
import SiteHeader from '../components/SiteHeader.astro';

interface NavItem {
  label: string;
  href?: string;
  children?: NavItem[];
}

interface Heading {
  text: string;
  slug: string;
}

interface Props {
  title: string;
  description?: string;
  nav: NavItem[];
  currentPath: string;
  headings?: Heading[];
}

const { title, description, nav, currentPath, headings = [] } = Astro.props;

/**
 * Check if a nav item is the current page.
 * Exact match only - no prefix matching.
 */
function isActive(href: string | undefined, current: string): boolean {
  if (!href) return false;
  return current === href;
}
---

<RootLayout title={title} description={description}>
  <SiteHeader />
  <div class="docs-layout">
    <!-- Sidebar -->
    <aside class="docs-sidebar">
      <nav class="docs-nav" aria-label="Documentation">
        <ul class="docs-nav__list" role="list">
          {
            nav.map((section) => (
              <li class="docs-nav__section">
                {section.href ? (
                  <a
                    href={section.href}
                    class="docs-nav__link"
                    data-active={isActive(section.href, currentPath) ? 'true' : undefined}
                  >
                    {section.label}
                  </a>
                ) : (
                  <>
                    <span class="docs-nav__heading">{section.label}</span>
                    {section.children && (
                      <ul class="docs-nav__children" role="list">
                        {section.children.map((item) => (
                          <li>
                            <a
                              href={isActive(item.href, currentPath) ? '#top' : item.href}
                              class="docs-nav__link"
                              data-active={isActive(item.href, currentPath) ? 'true' : undefined}
                            >
                              {item.label}
                            </a>
                            {/* Show h2 headings for current page */}
                            {isActive(item.href, currentPath) && headings.length > 0 && (
                              <ul class="docs-nav__headings" role="list">
                                {headings.map((heading) => (
                                  <li>
                                    <a href={`#${heading.slug}`} class="docs-nav__heading-link">
                                      {heading.text}
                                    </a>
                                  </li>
                                ))}
                              </ul>
                            )}
                          </li>
                        ))}
                      </ul>
                    )}
                  </>
                )}
              </li>
            ))
          }
        </ul>
      </nav>
    </aside>

    <!-- Main Content -->
    <main class="docs-content" id="top">
      <article class="docs-article">
        <slot />
      </article>
    </main>
  </div>
</RootLayout>

<script>
  // Handle anchor link clicks to scroll only the content area, not the sidebar
  function handleAnchorClicks(e: MouseEvent) {
    const link = (e.target as HTMLElement).closest('a[href^="#"]');
    if (!link) return;

    const href = link.getAttribute('href');
    if (!href) return;

    const contentContainer = document.querySelector('.docs-content');
    if (!contentContainer) return;

    e.preventDefault();

    if (href === '#top') {
      // Scroll content to top
      contentContainer.scrollTo({ top: 0, behavior: 'smooth' });
    } else {
      // Find the target element
      const target = document.querySelector(href);
      if (target) {
        // Calculate position relative to the scroll container
        const containerRect = contentContainer.getBoundingClientRect();
        const targetRect = target.getBoundingClientRect();
        const scrollTop = contentContainer.scrollTop;
        const offsetTop = targetRect.top - containerRect.top + scrollTop;

        // Scroll with some padding at the top
        contentContainer.scrollTo({
          top: offsetTop - 16,
          behavior: 'smooth',
        });
      }
    }

    // Update URL without triggering navigation
    history.pushState(null, '', href);
  }

  // Reset scroll position on page navigation
  function resetScroll() {
    const contentContainer = document.querySelector('.docs-content');
    if (contentContainer) {
      contentContainer.scrollTop = 0;
    }
  }

  document.addEventListener('click', handleAnchorClicks);
  document.addEventListener('astro:page-load', resetScroll);
</script>

<style>
  /* Prevent body scroll so overscroll bounce stays in inner containers */
  :global(body:has(.docs-layout)) {
    overflow: hidden;
  }

  .docs-layout {
    display: grid;
    grid-template-columns: 1fr;
    height: calc(100vh - var(--header-height, 4rem));
  }

  @media (min-width: 60rem) {
    .docs-layout {
      grid-template-columns: 260px 1fr;
    }
  }

  /* Sidebar */
  .docs-sidebar {
    display: none;
    background: var(--color-surface-muted);
    border-inline-end: 1px solid var(--color-border);
    padding: var(--space-6) var(--space-4);
    height: 100%;
    overflow-y: auto;
    overscroll-behavior: contain;
  }

  @media (min-width: 60rem) {
    .docs-sidebar {
      display: block;
    }
  }

  /* Navigation */
  .docs-nav__list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .docs-nav__section {
    margin-block-end: var(--space-3);
  }

  .docs-nav__heading {
    display: block;
    font-size: var(--text-xs);
    font-weight: 600;
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    padding: var(--space-2) 0;
    margin-block-end: var(--space-1);
  }

  .docs-nav__link {
    display: block;
    padding: var(--space-1) var(--space-2);
    color: var(--color-text);
    text-decoration: none;
    border-radius: var(--radius-sm);
    font-size: var(--step--1);
    line-height: 1.4;
    transition: background-color 0.15s ease;
  }

  .docs-nav__link:hover {
    background: var(--color-surface-raised);
  }

  .docs-nav__link[data-active='true'] {
    background: var(--color-accent);
    color: var(--color-text-on-accent, white);
    font-weight: 500;
  }

  .docs-nav__children {
    list-style: none;
    padding: 0;
    margin: 0;
    padding-inline-start: var(--space-3);
    border-inline-start: 1px solid var(--color-border);
    margin-inline-start: var(--space-3);
  }

  .docs-nav__children .docs-nav__link {
    font-size: var(--text-xs);
  }

  /* On-page heading links (h2s) */
  .docs-nav__headings {
    list-style: none;
    padding: 0;
    margin: 0;
    padding-inline-start: var(--space-3);
    border-inline-start: 1px solid var(--color-border);
    margin-inline-start: var(--space-3);
    margin-block: var(--space-1);
  }

  .docs-nav__heading-link {
    display: block;
    padding: var(--space-1) var(--space-2);
    color: var(--color-text-muted);
    text-decoration: none;
    border-radius: var(--radius-sm);
    font-size: var(--text-2xs);
    line-height: 1.4;
    transition:
      color var(--transition-fast),
      background-color var(--transition-fast);
  }

  .docs-nav__heading-link:hover {
    color: var(--color-text);
    background: var(--color-surface-raised);
  }

  /* Content - scroll container spans full width of grid cell */
  .docs-content {
    height: 100%;
    overflow-y: auto;
    overscroll-behavior: contain;
    padding: 2rem 1.5rem;
  }

  @media (min-width: 60rem) {
    .docs-content {
      padding: 3rem 3rem;
    }
  }

  @media (min-width: 80rem) {
    .docs-content {
      padding: 3rem 4rem;
    }
  }

  .docs-article {
    max-width: 48rem;
    width: 100%;
    margin-inline: auto;
    padding-block-end: var(--space-16);
  }

  /* Lead paragraph styling for first p after h1 */
  .docs-article :global(h1 + p) {
    font-size: var(--text-md);
    color: var(--color-text-muted);
    line-height: var(--leading-relaxed);
    margin-block-end: calc(var(--baseline) * 1.5);
  }

  /* Tighter h2 margins for dense documentation */
  .docs-article :global(h2) {
    margin-block-start: calc(var(--baseline) * 2.5);
  }

  /* Lists - more padding for docs readability */
  .docs-article :global(ul),
  .docs-article :global(ol) {
    padding-inline-start: var(--space-6);
  }

  /* Tables */
  .docs-article :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin-block: var(--space-4);
    font-size: var(--step--1);
  }

  .docs-article :global(th),
  .docs-article :global(td) {
    text-align: left;
    padding: var(--space-2) var(--space-3);
    border-block-end: 1px solid var(--color-border);
  }

  .docs-article :global(th) {
    font-weight: 600;
    background: var(--color-surface-muted);
  }

  /* Callout box */
  .docs-article :global(.callout) {
    padding: var(--space-4);
    background: var(--color-surface-muted);
    border-inline-start: 3px solid var(--color-accent);
    border-radius: var(--radius-sm);
    margin-block: var(--space-4);
  }

  .docs-article :global(.callout p:last-child) {
    margin-block-end: 0;
  }

  /* Card grid for use cases / scenarios */
  .docs-article :global(.card-grid) {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--space-4);
    margin-block: var(--space-6);
  }

  .docs-article :global(.card) {
    padding: var(--space-5);
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    transition: border-color 0.15s ease;
  }

  .docs-article :global(.card:hover) {
    border-color: var(--color-accent);
  }

  .docs-article :global(.card h3),
  .docs-article :global(.card h4) {
    margin-block-start: 0;
    margin-block-end: var(--space-2);
    color: var(--color-link);
    font-size: var(--text-md);
  }

  .docs-article :global(.card p) {
    margin-block-end: 0;
    font-size: var(--text-sm);
    color: var(--color-text-muted);
  }

  .docs-article :global(.card a) {
    text-decoration: none;
  }

  .docs-article :global(.card a:hover h3),
  .docs-article :global(.card a:hover h4) {
    text-decoration: underline;
  }
</style>
